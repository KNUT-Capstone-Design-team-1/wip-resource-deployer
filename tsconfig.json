{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node10",

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  }
}
